---
import Email from "@components/icons/Email.astro";
import Facebook from "@components/icons/Facebook.astro";
import Linkedin from "@components/icons/Linkedin.astro";

import type { FooterSection } from "src/types";

interface Props {
	i18n: FooterSection;
}

const { i18n } = Astro.props;
const { sectionTitles, navigation, socialLinks, credits } = i18n;
---

<footer
    class="relative px-6 pt-16 pb-10 overflow-hidden text-white bg-background-alt sm:px-8"
>
    <div
        class="relative z-10 grid max-w-6xl grid-cols-1 gap-12 mx-auto text-center sm:grid-cols-2 md:grid-cols-3 md:text-left"
    >
        <div>
            <h4 class="mb-4 text-lg font-semibold text-primary">
                {sectionTitles.navigation}
            </h4>
            <ul class="space-y-2 text-gray-300">
                {
                    navigation.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class="transition hover:text-white"
                            >
                                {link.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <div>
            <h4 class="mb-4 text-lg font-semibold text-secondary">
                {sectionTitles.social}
            </h4>
            <div
                class="flex justify-center gap-4 text-2xl text-white md:justify-start"
            >
                {
                    socialLinks.map((social) => (
                        <a
                            name={`${social.icon} logo`}
                            aria-label={`${social.icon} logo`}
                            target="_blank"
                            href={social.href}
                            class="transition hover:text-primary"
                        >
                            {social.icon === "facebook" && <Facebook />}
                            {social.icon === "linkedin" && <Linkedin />}
                            {social.icon === "email" && <Email />}
                        </a>
                    ))
                }
            </div>
        </div>

        <div>
            <h4 class="mb-3 text-lg font-semibold text-primary">
                {sectionTitles.credits}
            </h4>
            <p class="text-gray-300">
                {credits.text}<br />
                {credits.tagline}
                <span class="font-semibold">{credits.year}</span>.
            </p>
        </div>
    </div>

    <div
        class="relative z-10 pt-6 mt-12 text-sm text-center text-gray-400 border-t border-white/10"
    >
        {credits.copyright}
    </div>
</footer>
