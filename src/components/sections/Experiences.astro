---
import SectionContainer from "@components/ui/SectionContainer.astro";
import type { ExperiencesSection } from "src/types";

interface Props {
	i18n: ExperiencesSection;
}

const { i18n } = Astro.props;

const { id, title, description, experiences } = i18n;
---

<SectionContainer id={id} class="px-4 bg-background-alt sm:px-6 lg:px-8">
  <div class="relative z-10 mx-auto max-w-7xl">
    <h2
      class="mb-8 text-2xl font-bold text-center sm:text-3xl md:text-4xl text-secondary sm:mb-12"
    >
      {title}
    </h2>

    <p
      set:html={description}
      class="max-w-3xl mx-auto mb-12 text-base leading-relaxed text-center text-gray-300 sm:text-lg sm:mb-16"
    />

    <div
      class="grid grid-cols-1 gap-6 text-sm sm:grid-cols-2 md:grid-cols-3 sm:gap-8 sm:text-base"
    >
      {
        experiences.map((exp, index) => (
          <div class="bg-white/5 border border-white/10 p-5 sm:p-6 rounded-xl backdrop-blur-md hover:scale-[1.03] transition duration-300">
            <h3
              class={`text-lg sm:text-xl font-bold mb-2 ${index % 2 === 0 ? "text-primary" : "text-secondary"}`}
            >
              {exp.title}
            </h3>
            <ul class="pl-4 space-y-1 text-gray-300 list-disc sm:pl-5">
              {exp.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>

  {/* Borde inferior decorativo */}
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/20 to-transparent"></div>
</SectionContainer>
