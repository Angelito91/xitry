---
import Form from "@components/ui/Form.astro";
import SectionContainer from "@components/ui/SectionContainer.astro";

import type { ContactSection } from "src/types";

interface Props {
	i18n: ContactSection;
}

const { i18n } = Astro.props;
const { title, description, form, id } = i18n;
---

<SectionContainer id={id} class="px-4 bg-background sm:px-6 lg:px-8">
    <div class="relative z-10 max-w-4xl mx-auto text-center">
        <h2 class="mb-6 text-3xl font-bold sm:text-4xl text-secondary">
            {title}
        </h2>
        <p class="max-w-2xl mx-auto mb-10 text-base text-gray-400 sm:text-lg">
            {description}
        </p>

        <Form i18n={form} />
    </div>

    {/* Borde inferior decorativo */}
    <div
        class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/20 to-transparent"
    >
    </div>
</SectionContainer>
