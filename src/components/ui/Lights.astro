<!-- Hero Background Container -->
<div class="absolute inset-0 bg-[var(--color-background)] z-0 overflow-hidden">
  <!-- Fondo con gradiente sutil -->
  <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-background)] via-[var(--color-background-alt)] to-[var(--color-background)]"></div>
  
  <!-- Líneas de cuadrícula sutiles -->
  <div class="absolute inset-0 opacity-10">
    <div class="w-full h-full bg-[linear-gradient(to_right,var(--color-secondary)_1px,transparent_1px),linear-gradient(to_bottom,var(--color-secondary)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
  </div>

  <!-- Efecto de esquina iluminada superior derecha -->
  <div 
    class="absolute w-[800px] h-[800px] bg-[radial-gradient(circle_at_center,var(--color-secondary),transparent_70%)] opacity-5"
    style="top: -50%; right: -30%;"
  ></div>

  <!-- Efecto de esquina iluminada inferior izquierda -->
  <div 
    class="absolute w-[600px] h-[600px] bg-[radial-gradient(circle_at_center,var(--color-primary),transparent_70%)] opacity-5"
    style="bottom: -30%; left: -20%;"
  ></div>

  <!-- Líneas diagonales sutiles -->
  <div 
    class="absolute inset-0 bg-[linear-gradient(45deg,var(--color-background)_45%,transparent_45%,transparent_55%,var(--color-background)_55%),linear-gradient(-45deg,var(--color-background)_45%,transparent_45%,transparent_55%,var(--color-background)_55%)] bg-[size:20px_20px] opacity-5"
  ></div>

  <!-- Borde sutil en los lados -->
  <div class="absolute inset-y-0 left-0 right-0 border-x border-[var(--color-secondary)] border-opacity-5"></div>
</div>