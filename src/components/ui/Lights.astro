<!-- Hero Background Container -->
<div class="absolute inset-0 bg-[var(--color-background)] z-0 overflow-hidden">

  <!-- Glow animado suave (como luz ambiental en movimiento) -->
  <div
    class="absolute w-[500px] h-[500px] bg-[var(--color-secondary)] opacity-10 blur-3xl rounded-full animate-pulse"
    style="top: 30%; left: 60%; transform: translate(-50%, -50%)"
  ></div>

  <!-- Otro destello menos fuerte (más lejos, más suave) -->
  <div
    class="absolute w-[300px] h-[300px] bg-[var(--color-primary)] opacity-10 blur-2xl rounded-full animate-pulse"
    style="top: 70%; left: 30%; transform: translate(-50%, -50%)"
  ></div>

  <!-- Gradiente sutil de fondo (sin mover el color base) -->
  <div class="absolute inset-0 bg-gradient-to-tr from-[var(--color-background)] via-[var(--color-background-alt)] to-[var(--color-background)] opacity-80 z-0" />
</div>
