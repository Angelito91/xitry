---
import type { JSX } from "astro/jsx-runtime";

interface Props {
	href: string;
	target: string;
	text: string;
	Icon: (_props: Record<string, string>) => JSX.Element;
}

const { href, target, text, Icon } = Astro.props;
---

<a
    href={href}
    target={target}
    class="flex items-center justify-center gap-2 px-4 py-2 text-sm text-white transition duration-300 border sm:gap-3 sm:px-5 sm:py-3 rounded-xl border-white/20 bg-white/5 backdrop-blur sm:text-base hover:bg-primary/10"
>
    <Icon class="w-5 h-5 sm:w-6 sm:h-6" />
    <span class="whitespace-nowrap">{text}</span>
</a>
