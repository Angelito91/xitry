---
import Footer from "@components/sections/Footer.astro";
import Header from "@components/sections/Header.astro";

import "../styles/global.css";

import type { i18nWebsite } from "src/types";

interface Props {
	i18n: i18nWebsite;
}

const { i18n } = Astro.props;
const { title, description, keywords, author, sections, language } = i18n;
const { header, footer } = sections;
---

<!doctype html>
<html lang={language} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="https://xitry-game.com/favicon.ico"
		/>
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={author} />
		<meta name="robots" content="index, follow" />

		<!-- Hreflang para internacionalizaciÃ³n -->
		<link
			rel="alternate"
			hreflang="x-default"
			href="https://xitry-game.com"
		/>
		<link rel="alternate" hreflang="es" href="https://xitry-game.com/es" />
		<link rel="alternate" hreflang="en" href="https://xitry-game.com/en" />
		<link rel="alternate" hreflang="fr" href="https://xitry-game.com/fr" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://xitry-game.com" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta
			property="og:image"
			content="https://xitry-game.com/images/logo.webp"
		/>
		<meta property="og:image:width" content="500" />
		<meta property="og:image:height" content="500" />
		<meta property="og:site_name" content="Xitry Game" />
		<meta property="og:locale" content={language} />
		<meta property="og:locale:alternate" content="es" />
		<meta property="og:locale:alternate" content="en" />
		<meta property="og:locale:alternate" content="fr" />

		<!-- Preconnect y Preload -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&family=Exo+2:wght@300;400;600;700&display=swap"
			as="style"
			onload="this.onload=null;this.rel='stylesheet'"
		/>
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&family=Exo+2:wght@300;400;600;700&display=swap"
				rel="stylesheet"
			/>
		</noscript>

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@XitryGame" />
		<meta name="twitter:creator" content="@XitryGame" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta
			name="twitter:image"
			content="https://xitry-game.com/images/logo.webp"
		/>

		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Xitry Game",
				"url": "https://xitry-game.com",
				"logo": "https://xitry-game.com/images/logo.webp",
				"description": "Desarrollo de videojuegos innovadores y experiencias interactivas"
			}
		</script>
	</head>
	<body
		class="bg-gradient-to-br from-background via-background-alt to-primary/80"
	>
		<Header i18n={header} language={language} />
		<slot />
		<Footer i18n={footer} language={language} />
	</body>
</html>

<style>
	:root {
		--font-display: "Orbitron", sans-serif;
		--font-heading: "Rajdhani", sans-serif;
		--font-body: "Exo 2", sans-serif;
	}

	h1,
	h2,
	h3 {
		font-family: var(--font-heading);
		font-weight: 700;
	}

	body {
		font-family: var(--font-body);
	}
</style>
